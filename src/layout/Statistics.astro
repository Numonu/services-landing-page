	{
		title: "last investments",
		link: "#",
	},
	{
		title: "top investors",
		link: "#",
	},
	{
		title: "last withdraws",
		link: "#",
	},
];
const statisticsCards = [
	{
		value: "12,7m",
		category: "deposit",
	},
	{
		value: "1,46k",
		category: "last deposit",
	},
	{
		value: "6,8m",
		category: "clients",
	},
	{
		value: "44,7k",
